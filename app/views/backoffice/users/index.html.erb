<h1 class="page-header">Administradores</h1>


<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %>
    </div>
<% end -%>

<% if alert %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= alert %>
    </div>
<% end -%>



<div class="table-responsive margin_top_button">
    <table class="table table-hover">
        <thead>
            <tr>
              <%= link_to "<b>+</b> Criar Administrador".html_safe, new_backoffice_user_path, class: "btn btn-primary btn-sm pull-right" %>

                <th>#</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Métodos</th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>

              <td> 
                  <%= link_to backoffice_user_path(user), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_backoffice_user_path(user), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                  <% end %>
                  <% unless current_user.email == user.email %>
                    <%= link_to backoffice_user_path(user), :method => 'delete',class:"btn btn-danger btn-circle",
                     data: { confirm: "Tem certeza que deseja apagar <b> #{user.name} </b> ?" } do %>
                      <i class="fa fa-minus"></i>
                    <% end %>
                  <% else %>
                    <%= link_to '#', class:"btn btn-danger btn-circle", disabled: "disabled"  do %>
                      <i class="fa fa-minus"></i>
                    <% end %>
                  <% end %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->
