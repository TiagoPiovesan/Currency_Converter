<h1 class="page-header">Administradores</h1>


<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= notice %>
    </div>
<% end -%>

<div class="panel panel-default">
    <div class="panel-heading">
        Todos os Admins
        <%= link_to new_backoffice_user_path, class:'btn btn-success btn-circle pull-right', style:'margin-top: -5px' do %>
          <i class="fa fa-plus"></i>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>cpf</th>
                        <th>E-mail</th>
                        <th>Sexo</th>
                        <th>Data de nascimento</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.cpf %></td>
                      <td><%= user.email %></td>
                      <td><%= user.sex %></td>
                      <td><%= l(user.birth) %></td>
                      <td style="width: 150px"> 
                          <%= link_to edit_backoffice_user_path(user), class:"btn btn-primary btn-circle" do %>
                              <i class="fa fa-edit"></i>
                          <% end %>
                          <% unless current_user.email == user.email %>
                            <%= link_to backoffice_user_path(user), :method => 'delete',class:"btn btn-danger btn-circle",
                             data: { confirm: "Tem certeza que deseja apagar <b> #{user.email} </b> ?" } do %>
                              <i class="fa fa-minus"></i>
                            <% end %>
                          <% else %>
                            <%= link_to '#', class:"btn btn-danger btn-circle", disabled: "disabled"  do %>
                              <i class="fa fa-minus"></i>
                            <% end %>
                          <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
