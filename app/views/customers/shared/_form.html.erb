<div class="row">
  <h1 class="page-header"><%= action %></h1>
</div>

<% if @customer.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

        <ul>
            <% @user.errors.full_messages.each do |messagem| %>
                <li><%= messagem %></li>
            <% end -%>
        </ul>
    </div>
<% end %>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for (@customer) do |f| %>
                            <div class="form-group">
                                <label>Nome</label>
                                <%= f.text_field :name, class: 'form-control', placeholder: 'Nome' %>
                            </div>

                            <div class="form-group">
                                <label>E-mail</label>
                                <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
                            </div>

                            <div class="form-group">
                                <label>CPF</label>
                                <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF' %>
                            </div>


                            <div class="form-group">
                                <label>Data de Nasciemnto</label>
                                <%= f.date_field :birth, class: 'form-control' %>
                            </div>

                            <!-- Formulário Complexo --> 
                            <div id="phones">
                                <%= f.fields_for :phones do |phones_fields| %>
                                    <%= render partial: "phone_fields", locals: { f: phones_fields } %>
                                <% end %>
                            </div>


                            <div class="col-xs-12">
                                  <%= link_to_add_association('Adicionar Telefone', f, :phones) %>
                            </div>
                            <!-- /Formulário Complexo --> 

                            <div class="form-group">
                                <label>Sexo</label>
                                <%= f.select :sex, User.sexes.keys, {}, { class: 'form-control' } %>
                            </div>

                            <div class="form-group">
                              <%= f.submit 'Salvar', class: 'btn btn-default' %>
                              <%= link_to "Voltar", customers_path, class: "btn btn-default" %>
                            </div>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


