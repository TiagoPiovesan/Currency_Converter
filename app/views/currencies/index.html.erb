<% if notice %>
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= notice %>
    </div>
<% end -%>

<h1 class="page-header">Lista de moedas</h1>

<% if @currencies.all.size > 0 %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.id %></td>
        <td><%= currency.name %></td>
        <td>R$ <%= currency.price %></td>
        <td><%= link_to 'Ver', currency, class: 'btn btn-default btn-sm btn-block' %></td>
        <td><%= link_to 'Apagar', currency, method: :delete, class: 'btn btn-danger btn-sm btn-block', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>

<center>
  <div class="loader">
    <span>{</span><span>}</span>
  </div>
  <br>
  <%= link_to "Atualizar", currencies_path, class: 'btn btn-default btn-sm', style: 'padding: 5px 200px;' %>
</center>

<% end %>